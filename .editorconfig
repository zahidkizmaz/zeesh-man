# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.py]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2

[*.{rst,ini,md}]
indent_style = space
indent_size = 4

[*.{yml,html,xml,xsl,json}]
indent_style = space
indent_size = 2

[*.{css,less}]
indent_style = space
indent_size = 2

[*.{js,jsx}]
indent_style = space
indent_size = 2

[*.{ts,tsx}]
indent_style = space
indent_size = 2

[{Makefile, makefile, GNUmakefile}]
indent_style = tab
indent_size = 8

[*.sql]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*rc]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2
